<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PreviewActivity.PreviewVerActivity">

    <TextView
            android:text="@string/tv_guide_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:fontFamily="@font/notosanscjkkr_bold" android:textSize="25sp" android:textColor="@color/fontGray"
            app:layout_constraintTop_toTopOf="parent"
            android:includeFontPadding="false"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_width="185dp" android:layout_height="340dp"
            android:background="@drawable/illust_n"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/imageView8"
            app:layout_constraintBottom_toTopOf="@+id/tv_yes_preview_ver" app:layout_constraintVertical_bias="0.498"/>
    <ImageView android:layout_width="185dp" android:layout_height="340dp"
               android:background="@drawable/round_5_ntower_light"
               android:layout_marginEnd="16dp"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/imageView8"
               android:id="@+id/imageView5"/>
    <TextView
            android:text="mailmail@gmail.com"
            android:layout_width="wrap_content"
            android:layout_marginBottom="14.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/line_design_ver"
            android:layout_height="wrap_content" android:id="@+id/tv_email_preview_ver"
            android:fontFamily="@font/kopubdotum_medium" android:textSize="10sp"
            android:includeFontPadding="false" android:textColor="@color/ntower_font"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"/>
    <TextView
            android:text="GIM         GA          ON"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" android:id="@+id/tv_name_en_design_hor"
            android:fontFamily="@font/kopubdotum_medium"
            android:includeFontPadding="false" android:textColor="@color/ntower_font" android:textSize="8sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_ko_design_hor"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"/>
    <TextView
            android:text="김 가 온"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_name_ko_design_hor"
            android:fontFamily="@font/kopubbatang_bold"
            android:textSize="25sp" android:textColor="@color/ntower_font" android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@+id/imageView5" app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
    <TextView
            android:text="010-XXXX-XXXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_phone_preview_ver"
            app:layout_constraintBottom_toTopOf="@+id/tv_email_preview_ver"
            android:layout_marginBottom="4dp" android:textSize="10sp" android:includeFontPadding="false"
            android:textColor="@color/ntower_font"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"/>
    <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp" android:background="@drawable/icon_ko_purple"
            android:id="@+id/iv_ko_design_hor"
            app:layout_constraintTop_toTopOf="@+id/imageView5" app:layout_constraintStart_toStartOf="@+id/imageView5"
            android:layout_marginTop="29dp" app:layout_constraintEnd_toEndOf="@+id/imageView5"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="2dp"
            android:layout_marginBottom="30dp"
            android:background="@color/ntower_dark"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@id/imageView5"
            android:id="@+id/line_design_ver" app:layout_constraintEnd_toEndOf="@+id/imageView5"></androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:text="@string/tv_yes_preview"
            android:layout_width="match_parent"
            android:layout_height="71dp" android:id="@+id/tv_yes_preview_ver" android:background="@color/mainColor"
            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="@font/notosanscjkkr_regular"
            android:textSize="30sp" android:textColor="#FFFFFF" android:includeFontPadding="false"
            android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>