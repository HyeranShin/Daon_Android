<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".InfoEnterActivity">

    <TextView
            android:text="@string/tv_guide_info_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_guide_info_enter"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="63dp" android:textColor="@color/mainColor" android:textSize="25sp"
            android:fontFamily="@font/notosanscjkkr_bold" app:lineHeight="37sp" android:textAlignment="center"
    />
    <Button
            android:text="@string/btn_next_info_enter"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/btn_next_info_enter"
            android:background="@color/mainColor" android:textColor="#FFFFFF" android:textSize="30sp"
            android:fontFamily="@font/notosanscjkkr_regular"
            app:layout_constraintBottom_toBottomOf="parent" android:includeFontPadding="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>