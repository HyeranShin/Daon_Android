<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".InfoEnterActivity">

    <TextView
            android:text="@string/tv_guide_info_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_guide_info_enter"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="63dp" android:textColor="@color/mainColor" android:textSize="25sp"
            android:fontFamily="@font/notosanscjkkr_bold" app:lineHeight="37sp" android:textAlignment="center"
    />
    <Button
            android:text="@string/btn_next_info_enter"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/btn_next_info_enter"
            android:background="@color/mainColor" android:textColor="#FFFFFF" android:textSize="30sp"
            android:fontFamily="@font/notosanscjkkr_regular"
            app:layout_constraintBottom_toBottomOf="parent" android:includeFontPadding="false"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/btn_next_info_enter" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="156dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/tv_birthday_info_enter" android:layout_marginTop="21dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/round_20_light_gray"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_marginRight="3dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:inputType="number"
                        android:ems="10"
                        android:maxLength="2"
                        android:gravity="right"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanscjkkr_medium" android:textSize="23sp"
                        android:textColor="@color/mainColor"
                        android:id="@+id/editText" android:layout_weight="1" android:background="@null"/>
                <TextView
                        android:text="@string/tv_month_info_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_month_info_enter"
                        android:fontFamily="@font/notosanscjkkr_medium" android:textSize="23sp"
                        android:textColor="@color/mainColor" android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:paddingHorizontal="10dp"
                    android:layout_height="match_parent" android:background="@drawable/round_20_light_gray"
                    android:layout_weight="1" android:layout_marginLeft="3dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:inputType="number"
                        android:ems="10"
                        android:gravity="right"
                        android:includeFontPadding="false"
                        android:maxLength="2"
                        android:fontFamily="@font/notosanscjkkr_medium" android:textSize="23sp"
                        android:textColor="@color/mainColor"
                        android:id="@+id/editText2" android:layout_weight="1" android:background="@null"/>
                <TextView
                        android:text="@string/tv_day_info_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView7"
                        android:textColor="@color/mainColor" android:fontFamily="@font/notosanscjkkr_medium"
                        android:textSize="23sp" android:includeFontPadding="false"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:text="@string/tv_birthday_info_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_birthday_info_enter"
                android:fontFamily="@font/notosanscjkkr_medium" android:includeFontPadding="false"
                android:textSize="25sp"
                android:textColor="@color/mainColor"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:layout_marginTop="45dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="@string/tv_gender_info_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_gender_info_enter"
                android:fontFamily="@font/notosanscjkkr_medium" android:includeFontPadding="false"
                android:textSize="25sp"
                android:textColor="@color/mainColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="137dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_gender_info_enter"
                android:layout_marginTop="15dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:background="@drawable/round_20_light_gray"
                android:id="@+id/linearLayout">
            <TextView
                    android:text="@string/tv_male_info_enter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/tv_male_info_enter" android:layout_weight="1"
                    android:fontFamily="@font/notosanscjkkr_medium" android:textSize="23sp"
                    android:textAlignment="center" android:includeFontPadding="false" android:textColor="#FFFFFF"
                    android:background="@drawable/round_20_main_color"/>
            <TextView
                    android:text="@string/tv_female_info_enter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/tv_female_info_enter"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanscjkkr_medium" android:textSize="23sp"
                    android:textAlignment="center" android:includeFontPadding="false"
                    android:textColor="@color/mainColor"
            />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>