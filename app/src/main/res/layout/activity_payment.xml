<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PaymentActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="154dp"
                                                           android:background="@color/mainColor">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="41sp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:text="결제"
                    app:layout_constraintBottom_toTopOf="@+id/textView12"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="43dp"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/notosanscjkkr_demilight"
                    android:text="수령 장소에서의 현장 결제입니다."
                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textView12"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_marginTop="27dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="19.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Gaon\n010-XXXX-XXXX\nmailmail@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_info_payment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_design_payment" android:layout_marginTop="3dp"
                    android:fontFamily="@font/notosanscjkkr_medium" android:textSize="12sp"
                    android:textColor="@color/darkGray" app:lineHeight="18sp"
                    android:lineSpacingExtra="6sp" android:includeFontPadding="false"/>
            <ImageView
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/iv_design_payment"
                    android:background="@drawable/illust_3_mini"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_design_payment"/>
            <TextView
                    android:text="무궁화 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_design_payment"
                    android:fontFamily="@font/notosanscjkkr_bold" android:textSize="17sp"
                    android:textColor="@color/fontGray"
                    app:layout_constraintTop_toBottomOf="@+id/textView14"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
                    android:includeFontPadding="false"/>
            <TextView
                    android:text="/ 수량 30장"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15"
                    app:layout_constraintStart_toEndOf="@+id/tv_design_payment"
                    app:layout_constraintTop_toTopOf="@+id/tv_design_payment"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_design_payment"
                    android:fontFamily="@font/notosanscjkkr_medium" android:textColor="@color/darkGray"
                    android:textSize="12sp" android:includeFontPadding="false" android:layout_marginStart="11dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="상품 정보"
                      android:fontFamily="@font/notosanscjkkr_bold"
                      android:textSize="20sp"
                      android:textColor="@color/mainColor"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                      android:id="@+id/textView14" android:includeFontPadding="false"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toBottomOf="@+id/tv_info_payment"
            android:layout_marginTop="22.5dp"
            android:background="@color/mainColor">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="40dp" android:layout_marginBottom="19.5dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="수령인 정보"
                      android:fontFamily="@font/notosanscjkkr_bold"
                      android:textSize="20sp"
                      android:textColor="@color/mainColor"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                      android:id="@+id/textView18" android:includeFontPadding="false"/>
            <TextView
                    android:text="핸드폰 뒷번호"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView19"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/notosanscjkkr_medium" android:includeFontPadding="false"
                    android:textSize="12sp" android:textColor="@color/fontGray"
                    app:layout_constraintTop_toBottomOf="@+id/textView21" android:layout_marginTop="23dp"/>
            <TextView
                    android:text="수령인 이름"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView21"
                    app:layout_constraintTop_toBottomOf="@+id/textView18"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="26dp"
                    android:fontFamily="@font/notosanscjkkr_medium" android:includeFontPadding="false"
                    android:textSize="12sp" android:textColor="@color/fontGray"/>
            <EditText
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_width="176dp"
                    android:layout_height="24dp" android:id="@+id/et_phone_payment"
                    android:background="@drawable/round_15_light_gray"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView19"
                    app:layout_constraintBottom_toBottomOf="@+id/textView19"
                    android:fontFamily="@font/notosanscjkkr_medium" android:textSize="12sp"
                    android:textColor="@color/darkGray"/>
            <EditText
                    android:layout_width="176dp"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:layout_height="24dp" android:id="@+id/et_name_payment"
                    android:background="@drawable/round_15_light_gray"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/textView21" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView21" android:textColor="@color/darkGray"
                    android:textSize="12sp" android:fontFamily="@font/notosanscjkkr_medium"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mainColor"
                    tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toBottomOf="@+id/et_phone_payment"
                    android:layout_marginTop="22.5dp">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="19.5dp"
        android:layout_marginHorizontal="40dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="수령 장소"
                      android:fontFamily="@font/notosanscjkkr_bold"
                      android:textSize="20sp"
                      android:textColor="@color/mainColor"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                      android:id="@+id/textView23" android:includeFontPadding="false"/>
            <TextView
                    android:text="제1 여객터미널 1층 입국장"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_loc1_payment"
                    android:fontFamily="@font/notosanscjkkr_bold" android:textSize="17sp"
                    android:textColor="@color/fontGray" android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@+id/textView23" android:layout_marginTop="13dp"/>
            <TextView
                    android:text="1층 4번 출구 다온 명함 수령센터"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_loc2_payment"
                    app:layout_constraintTop_toBottomOf="@+id/tv_loc1_payment" android:layout_marginTop="5dp"
                    android:fontFamily="@font/notosanscjkkr_medium" android:textSize="12sp"
                    android:includeFontPadding="false" android:textColor="@color/darkGray"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mainColor"
                    tools:layout_editor_absoluteX="0dp"
                    android:layout_marginTop="19.5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_loc2_payment">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginHorizontal="40dp" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:layout_width="176dp"
                    android:layout_height="24dp" android:id="@+id/tv_date_payment"
                    android:background="@drawable/round_15_light_gray"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView26"
                    app:layout_constraintBottom_toBottomOf="@+id/textView26"
                    android:fontFamily="@font/notosanscjkkr_medium" android:textSize="12sp"
                    android:textColor="@color/darkGray"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="수령 일시"
                      android:fontFamily="@font/notosanscjkkr_bold"
                      android:textSize="20sp"
                      android:textColor="@color/mainColor"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                      android:id="@+id/textView27" android:includeFontPadding="false"/>
            <TextView
                    android:text="수령 일시"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView26"
                    app:layout_constraintTop_toBottomOf="@+id/textView27"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="26dp"
                    android:fontFamily="@font/notosanscjkkr_medium" android:includeFontPadding="false"
                    android:textSize="12sp" android:textColor="@color/fontGray"/>

            <DatePicker
                    android:id="@+id/dataPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteX="41dp" app:layout_constraintTop_toBottomOf="@+id/tv_date_payment"
                    />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:layout_width="match_parent"
                android:text="15,000원 주문하기"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:layout_height="71dp" android:id="@+id/tv_order_payment" android:background="@color/mainColor"/>
    </LinearLayout>

</ScrollView>