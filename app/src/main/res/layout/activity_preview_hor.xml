<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PreviewActivity.PreviewHorActivity">

    <TextView
            android:text="@string/tv_guide_preview"
            android:layout_width="wrap_content"
            android:includeFontPadding="false"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:fontFamily="@font/notosanscjkkr_bold" android:textSize="25sp" android:textColor="@color/fontGray"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical" app:layout_constraintBottom_toTopOf="@+id/tv_yes_preview_hor"
                  app:layout_constraintTop_toBottomOf="@+id/textView5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="7dp"
                android:layout_marginHorizontal="18dp"
                android:background="@drawable/illust_1" android:id="@+id/iv_design_preview_hor"
                tools:layout_editor_absoluteX="19dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_design_hor"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="18dp"
                android:layout_marginBottom="15dp"
                android:elevation="7dp"
                android:layout_height="200dp" tools:layout_editor_absoluteX="37dp"
                android:background="@drawable/round_5_gung_light" app:layout_constraintTop_toBottomOf="@+id/iv_design_design_hor"
                android:id="@+id/iv_card_preview_hor"
                android:layout_marginTop="0dp">

            <TextView
                    android:text="mailmail@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_email_preview_hor"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
                    app:layout_constraintBottom_toTopOf="@+id/line_preview_hor" android:layout_marginBottom="11dp"
                    android:fontFamily="@font/kopubdotum_medium" android:textSize="10sp"
                    android:includeFontPadding="false" android:textColor="@color/gung_font"/>
            <TextView
                    android:text="GIM         GA          ON"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_name_en_preview_hor"
                    app:layout_constraintBottom_toBottomOf="@+id/line_preview_hor"
                    android:layout_marginBottom="11dp" android:fontFamily="@font/kopubdotum_medium"
                    android:includeFontPadding="false" android:textColor="@color/gung_font" android:textSize="8sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>
            <TextView
                    android:text="김 가 온"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_name_ko_preview_hor"
                    android:fontFamily="@font/kopubbatang_bold"
                    android:textSize="25sp" android:textColor="@color/gung_font" android:includeFontPadding="false"
                    app:layout_constraintBottom_toTopOf="@+id/tv_name_en_preview_hor"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="37dp"/>
            <TextView
                    android:text="010-XXXX-XXXX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_phone_preview_hor"
                    app:layout_constraintBottom_toTopOf="@+id/tv_email_preview_hor"
                    android:layout_marginBottom="3dp" android:textSize="10sp" android:includeFontPadding="false"
                    android:textColor="@color/gung_font" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="35dp"/>
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp" android:background="@drawable/icon_ko_blue"
                    android:id="@+id/iv_ko_preview_hor" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="17dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginHorizontal="32.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gung_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="28.5dp" app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/line_preview_hor" tools:layout_editor_absoluteY="170dp">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <TextView
            android:text="@string/tv_yes_preview"
            android:layout_width="match_parent"
            android:layout_height="71dp" android:id="@+id/tv_yes_preview_hor" android:background="@color/mainColor"
            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="@font/notosanscjkkr_regular"
            android:textSize="30sp" android:textColor="#FFFFFF" android:includeFontPadding="false"
            android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>