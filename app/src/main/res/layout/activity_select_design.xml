<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SelectDesignActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/tv_big_guide_select_design"
        android:layout_marginTop="27dp"
        android:includeFontPadding="false"
                  android:fontFamily="@font/notosanscjkkr_bold"
                  android:textSize="41sp"
                  android:textColor="@color/fontGray"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
        />
        <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp"
        android:layout_marginBottom="7dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/tv_small_guide_select_design"
                  android:fontFamily="@font/notosanscjkkr_demilight"
                  android:textSize="15sp"
                  android:textColor="@color/fontGray"
                  android:includeFontPadding="false"
                  android:layout_centerHorizontal="true"
        />
            <ImageView android:layout_width="32dp" android:layout_height="32dp"
            android:background="@drawable/icon_check_o"
            android:layout_marginLeft="27dp"
            android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        
        <RelativeLayout
                android:id="@+id/relative_design1"
                android:layout_width="match_parent" android:layout_height="200dp"
        android:layout_marginHorizontal="18dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/illust_1"
        android:layout_gravity="center_horizontal">
            <ImageView
                    android:id="@+id/iv_check1_select_design" android:layout_width="36dp" android:layout_height="36dp"
                       android:background="@drawable/icon_check_x"
                       android:layout_margin="7dp"/>
            <TextView android:layout_width="70dp" android:layout_height="24dp"
                      android:background="@drawable/round_3_main_color"
                      android:text="@string/tv_preview_select_design"
                      android:includeFontPadding="false"
                      android:layout_marginBottom="12dp"
                      android:fontFamily="@font/notosanscjkkr_regular"
                      android:textSize="15sp"
                      android:textColor="#FFFFFF"
                      android:gravity="center"
                      android:layout_alignParentBottom="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="15dp" android:id="@+id/tv_preview1_select_design"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relative_design2" android:layout_width="match_parent" android:layout_height="200dp"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/illust_2"
                        android:layout_gravity="center_horizontal">
            <ImageView
                    android:id="@+id/iv_check2_select_design" android:layout_width="36dp" android:layout_height="36dp"
                       android:background="@drawable/icon_check_x"
                       android:layout_margin="7dp"/>
            <TextView android:layout_width="70dp" android:layout_height="24dp"
                      android:background="@drawable/round_3_main_color"
                      android:text="@string/tv_preview_select_design"
                      android:includeFontPadding="false"
                      android:layout_marginBottom="12dp"
                      android:fontFamily="@font/notosanscjkkr_regular"
                      android:textSize="15sp"
                      android:textColor="#FFFFFF"
                      android:gravity="center"
                      android:layout_alignParentBottom="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="15dp" android:id="@+id/tv_preview2_select_design"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relative_design3" android:layout_width="match_parent" android:layout_height="200dp"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/illust_3"
                        android:layout_gravity="center_horizontal">
            <ImageView
                    android:id="@+id/iv_check3_select_design" android:layout_width="36dp" android:layout_height="36dp"
                       android:background="@drawable/icon_check_x"
                       android:layout_margin="7dp"/>
            <TextView android:layout_width="70dp" android:layout_height="24dp"
                      android:background="@drawable/round_3_main_color"
                      android:text="@string/tv_preview_select_design"
                      android:includeFontPadding="false"
                      android:layout_marginBottom="12dp"
                      android:fontFamily="@font/notosanscjkkr_regular"
                      android:textSize="15sp"
                      android:textColor="#FFFFFF"
                      android:gravity="center"
                      android:layout_alignParentBottom="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="15dp" android:id="@+id/tv_preview3_select_design"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relative_design4" android:layout_width="match_parent" android:layout_height="200dp"
                        android:layout_marginHorizontal="18dp"
                        android:elevation="10dp"
                        android:layout_marginBottom="35dp"
                        android:background="@drawable/illust_4"
                        android:layout_gravity="center_horizontal">
            <ImageView
                    android:id="@+id/iv_check4_select_design" android:layout_width="36dp" android:layout_height="36dp"
                       android:background="@drawable/icon_check_x"
                       android:layout_margin="7dp"/>
            <TextView android:layout_width="70dp" android:layout_height="24dp"
                      android:background="@drawable/round_3_main_color"
                      android:text="@string/tv_preview_select_design"
                      android:includeFontPadding="false"
                      android:layout_marginBottom="12dp"
                      android:fontFamily="@font/notosanscjkkr_regular"
                      android:textSize="15sp"
                      android:textColor="#FFFFFF"
                      android:gravity="center"
                      android:layout_alignParentBottom="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="15dp" android:id="@+id/tv_preview4_select_design"/>

        </RelativeLayout>

        <TextView
                android:id="@+id/tv_selected_select_design" android:layout_width="match_parent" android:layout_height="71dp"
        android:text="@string/tv_selected_select_design"
                  android:fontFamily="@font/notosanscjkkr_regular"
                  android:textSize="30sp"
                android:gravity="center"
                  android:textColor="#FFFFFF"
                  android:includeFontPadding="false"
        android:background="@color/mainColor"/>
    </LinearLayout>

</ScrollView>