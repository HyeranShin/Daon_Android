<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MyCardActivity.MyCardHorActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="7dp"
                android:layout_marginHorizontal="18dp"
                android:background="@drawable/illust_1"
                android:id="@+id/iv_design_mycard_hor"
                app:layout_constraintTop_toTopOf="parent">
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:elevation="7dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="18dp"
                android:layout_height="200dp" tools:layout_editor_absoluteX="37dp"
                android:background="@drawable/round_5_gung_light"
                app:layout_constraintTop_toBottomOf="@+id/iv_design_mycard_hor"
                android:id="@+id/iv_card_design_hor"
                android:layout_marginTop="18dp" app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    android:text="mailmail@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_email_card_hor"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
                    app:layout_constraintBottom_toTopOf="@+id/line_design_hor" android:layout_marginBottom="11dp"
                    android:fontFamily="@font/kopubdotum_medium" android:textSize="10sp"
                    android:includeFontPadding="false" android:textColor="@color/gung_font"/>
            <TextView
                    android:text="GIM         GA          ON"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_name_en_design_hor"
                    app:layout_constraintBottom_toBottomOf="@+id/line_design_hor"
                    android:layout_marginBottom="11dp" android:fontFamily="@font/kopubdotum_medium"
                    android:includeFontPadding="false" android:textColor="@color/gung_font" android:textSize="8sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>
            <TextView
                    android:text="김 가 온"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_name_ko_design_hor"
                    android:fontFamily="@font/kopubbatang_bold"
                    android:textSize="25sp" android:textColor="@color/gung_font" android:includeFontPadding="false"
                    app:layout_constraintBottom_toTopOf="@+id/tv_name_en_design_hor"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="37dp"/>
            <TextView
                    android:text="010-XXXX-XXXX"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content" android:id="@+id/tv_phone_card_hor"
                    app:layout_constraintBottom_toTopOf="@+id/tv_email_card_hor"
                    android:textSize="10sp" android:includeFontPadding="false"
                    android:textColor="@color/gung_font" app:layout_constraintEnd_toEndOf="@+id/tv_email_card_hor"
            />
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp" android:background="@drawable/icon_ko_blue"
                    android:id="@+id/iv_ko_design_hor" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="17dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginHorizontal="32.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gung_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="28.5dp" app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/line_design_hor" tools:layout_editor_absoluteY="170dp">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <TextView
            android:text="@string/tv_big_guide_my_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="41sp" android:textColor="@color/fontGray"
            android:fontFamily="@font/notosanscjkkr_bold" android:includeFontPadding="false"/>
    <TextView
            android:text="@string/tv_small_guide_my_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:id="@+id/textView4" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:textSize="15sp"
            android:textColor="@color/fontGray" android:fontFamily="@font/notosanscjkkr_demilight"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>