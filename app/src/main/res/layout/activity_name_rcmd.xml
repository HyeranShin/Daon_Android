<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".NameRcmdActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="@string/btn_selected_name_rcmd"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="71dp" android:id="@+id/btn_selected_name_rcmd"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:background="@color/darkGray"
                android:includeFontPadding="false" android:fontFamily="@font/notosanscjkkr_regular"
                android:textSize="30sp" android:textColor="#FFFFFF"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="411dp"
                android:layout_height="300dp" android:background="@color/mainColor"
                android:id="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:text="@string/tv_big_guide_name_rcmd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_big_guide_name_rcmd"
                    android:textColor="#FFFFFF" android:fontFamily="@font/notosanscjkkr_bold" android:textSize="41sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:lineHeight="50dp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="38dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="@string/tv_small_guide_name_rcmd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_small_guide_name_rcmd"
                    android:fontFamily="@font/notosanscjkkr_demilight" android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout" android:layout_marginTop="182dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:id="@+id/rv_name_list_name_rcmd"
                app:layout_constraintBottom_toBottomOf="@+id/btn_selected_name_rcmd"
                android:layout_marginBottom="177dp" android:paddingTop="10dp">
        </androidx.recyclerview.widget.RecyclerView>
        <Button
                android:text="@string/btn_rcmd_again_name_rcmd"
                android:textAllCaps="false"
                android:layout_width="163dp"
                android:layout_height="34dp"
                android:id="@+id/btn_rcmd_again_name_rcmd"
                android:includeFontPadding="false" android:background="@drawable/round_5_main_color"
                app:layout_constraintBottom_toTopOf="@+id/btn_selected_name_rcmd" android:layout_marginBottom="23dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/notosanscjkkr_regular" android:textSize="19sp" android:textColor="#FFFFFF"/>
        <TextView
                android:text="@string/tv_no_fav_name_name_rcmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_no_fav_name_name_rcmd"
                app:layout_constraintBottom_toTopOf="@+id/btn_rcmd_again_name_rcmd" android:layout_marginBottom="12dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/darkGray" android:textSize="22sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
            android:id="@+id/layout_check_selected_name_name_rcmd"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9575757">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="300dp" android:background="@color/mainColor"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:text="@string/tv_check_guide_name_rcmd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_big_guide_check_selected_name"
                    android:textAlignment="center" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="45dp" android:textColor="#FFFFFF" android:textSize="35sp"
                    android:fontFamily="@font/notosanscjkkr_bold"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:layout_marginBottom="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/round_5_white" android:elevation="10dp" android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">

            <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp" app:srcCompat="@drawable/icon_sound" android:id="@+id/ib_sound_item_name"
                    android:background="@null" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:layout_marginEnd="7dp"/>
            <TextView
                    android:text="김가온"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_ko_name_item_name"
                    android:includeFontPadding="false" android:fontFamily="@font/notosanscjkkr_bold"
                    android:textColor="@color/mainColor" android:textSize="48sp"
                    android:letterSpacing="0.2"
                    app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="31dp"/>
            <TextView
                    android:text="Kim-ga on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_en_name_item_name"
                    android:textColor="@color/mainColor" android:includeFontPadding="false"
                    android:fontFamily="@font/notosanscjkkr_bold" android:textSize="17sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_ko_name_item_name"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_ko_name_item_name" android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"/>
            <TextView
                    android:text="세상의 중심이 되어라"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_meaning_item_name"
                    android:textColor="@color/mainColor"
                    android:includeFontPadding="false" android:textSize="26sp" android:fontFamily="@font/notosanscjkkr_light"
                    app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="29dp"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/guideline"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
                    app:layout_constraintGuide_begin="42dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="71dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="@string/btn_no_name_rcmd"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:layout_height="match_parent" android:id="@+id/btn_no_name_rcmd"
                        android:layout_weight="1" android:background="@color/darkGray" android:textColor="#FFFFFF"
                        android:textSize="30sp" android:includeFontPadding="false"/>
                <Button
                        android:text="@string/btn_yes_name_rcmd"
                        android:layout_width="match_parent"
                        android:textAllCaps="false"
                        android:layout_height="match_parent" android:id="@+id/btn_yes_name_rcmdc"
                        android:layout_weight="1" android:background="@color/mainColor"
                        android:fontFamily="@font/notosanscjkkr_regular" android:textSize="30sp"
                        android:includeFontPadding="false" android:textColor="#FFFFFF"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</RelativeLayout>