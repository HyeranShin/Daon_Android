                                android:fontFamily="@font/notosanscjkkr_bold"
                                android:textColor="@color/mainColor"
                                android:textSize="17sp"
                                android:includeFontPadding="false"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="9dp"
                        />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/tv_area2_2_pick_up_loc"
                                  android:text="@string/tv_area2_2_pick_up_loc"
                                  android:layout_alignParentRight="true"
                                  android:layout_below="@+id/tv_area2_1_pick_up_loc"
                                  android:layout_marginRight="9dp"
                                  android:fontFamily="@font/notosanscjkkr_regular"
                                  android:textColor="@color/mainColor"
                                  android:textSize="17sp"
                                  android:includeFontPadding="false"
                        />
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:layout_centerHorizontal="true"
                                      android:layout_alignParentBottom="true"
                                      android:layout_marginBottom="12dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/tv_area2_3_pick_up_loc"
                                      android:fontFamily="@font/notosanscjkkr_bold"
                                      android:textColor="@color/mainColor"
                                      android:textSize="11sp"
                                      android:includeFontPadding="false"
                                      android:layout_gravity="right"
                            />
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/tv_area2_4_pick_up_loc"
                                      android:fontFamily="@font/notosanscjkkr_regular"
                                      android:textColor="@color/mainColor"
                                      android:textSize="11sp"
                                      android:includeFontPadding="false"
                            />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/relative_area3"
                            android:layout_width="match_parent"
                                    android:layout_height="230dp"
                                    android:background="@drawable/round_5_white"
                                    android:elevation="10dp"
                                    android:layout_marginHorizontal="18dp"

                                    android:layout_marginBottom="15dp">
                        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                                   android:background="@drawable/area_2_1"
                                   android:layout_marginBottom="15dp"/>
                        <ImageView
                                android:id="@+id/iv_check3_pick_up_loc" android:layout_width="36dp" android:layout_height="36dp"
                                   android:layout_margin="7dp"
                                   android:background="@drawable/icon_check_x"
                        />
                        <TextView
                                android:id="@+id/tv_area3_1_pick_up_loc"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/tv_area3_1_pick_up_loc"
                                android:fontFamily="@font/notosanscjkkr_bold"
                                android:textColor="@color/mainColor"
                                android:textSize="17sp"
                                android:includeFontPadding="false"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="9dp"
                        />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/tv_area3_2_pick_up_loc"
                                  android:text="@string/tv_area3_2_pick_up_loc"
                                  android:layout_alignParentRight="true"
                                  android:layout_below="@+id/tv_area3_1_pick_up_loc"
                                  android:layout_marginRight="9dp"
                                  android:fontFamily="@font/notosanscjkkr_regular"
                                  android:textColor="@color/mainColor"
                                  android:textSize="17sp"
                                  android:includeFontPadding="false"
                        />
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:layout_centerHorizontal="true"
                                      android:layout_alignParentBottom="true"
                                      android:layout_marginBottom="12dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/tv_area3_3_pick_up_loc"
                                      android:fontFamily="@font/notosanscjkkr_bold"
                                      android:textColor="@color/mainColor"
                                      android:textSize="11sp"
                                      android:includeFontPadding="false"
                                      android:layout_gravity="right"
                            />
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/tv_area3_4_pick_up_loc"
                                      android:fontFamily="@font/notosanscjkkr_regular"
                                      android:textColor="@color/mainColor"
                                      android:textSize="11sp"
                                      android:includeFontPadding="false"
                            />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/relative_area4"
                            android:layout_width="match_parent"
                                    android:layout_height="230dp"
                                    android:layout_marginHorizontal="18dp"
android:layout_marginBottom="35dp"
                                    android:background="@drawable/round_5_white"
                                    android:elevation="10dp">
                        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                                   android:background="@drawable/area_2_2"
                                   android:layout_marginBottom="15dp"/>
                        <ImageView android:layout_width="36dp" android:layout_height="36dp"
                                   android:layout_margin="7dp"
                                   android:id="@+id/iv_check4_pick_up_loc"
                                   android:background="@drawable/icon_check_x"
                        />
                        <TextView
                                android:id="@+id/tv_area4_1_pick_up_loc"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/tv_area4_1_pick_up_loc"
                                android:fontFamily="@font/notosanscjkkr_bold"
                                android:textColor="@color/mainColor"
                                android:textSize="17sp"
                                android:includeFontPadding="false"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="9dp"
                        />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/tv_area4_2_pick_up_loc"
                                  android:text="@string/tv_area4_2_pick_up_loc"
                                  android:layout_alignParentRight="true"
                                  android:layout_below="@+id/tv_area4_1_pick_up_loc"
                                  android:layout_marginRight="9dp"
                                  android:fontFamily="@font/notosanscjkkr_regular"
                                  android:textColor="@color/mainColor"
                                  android:textSize="17sp"
                                  android:includeFontPadding="false"
                        />
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:layout_centerHorizontal="true"
                                      android:layout_alignParentBottom="true"
                                      android:layout_marginBottom="12dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/tv_area4_3_pick_up_loc"
                                      android:fontFamily="@font/notosanscjkkr_bold"
                                      android:textColor="@color/mainColor"
                                      android:textSize="11sp"
                                      android:includeFontPadding="false"
                                      android:layout_gravity="right"
                            />
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/tv_area4_4_pick_up_loc"
                                      android:fontFamily="@font/notosanscjkkr_regular"
                                      android:textColor="@color/mainColor"
                                      android:textSize="11sp"
                                      android:includeFontPadding="false"
                            />
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>
                <TextView android:layout_width="match_parent" android:layout_height="71dp"
                          android:text="@string/tv_complete_pick_up_loc"
                          android:layout_below="@+id/linear_pick_up_loc"
                          android:id="@+id/tv_complete_pick_up_loc"
                          android:background="@color/mainColor"
                          android:fontFamily="@font/notosanscjkkr_regular"
                          android:textSize="30sp"
                          android:textColor="#FFFFFF"
                          android:includeFontPadding="false"
                          android:gravity="center"
                />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>