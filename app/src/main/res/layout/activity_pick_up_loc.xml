<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PickUpLocActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="248dp" android:background="@color/mainColor">

                    <TextView
                            android:text="@string/tv_small_guide_pick_up_loc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tv_small_guide_pick_up_loc"
                            android:fontFamily="@font/notosanscjkkr_demilight" android:textSize="15sp"
                            android:includeFontPadding="false" android:textColor="#FFFFFF"
                            app:layout_constraintTop_toBottomOf="@+id/tv_big_guide_pick_up_loc"
                            android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"/>
                    <TextView
                            android:text="@string/tv_big_guide_pick_up_loc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_big_guide_pick_up_loc"
                            android:fontFamily="@font/notosanscjkkr_bold" android:textSize="41sp"
                            android:textColor="#FFFFFF" android:includeFontPadding="false"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="27dp"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                        android:id="@+id/linear_pick_up_loc" android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_marginTop="159dp"
                              android:orientation="vertical">
                    <RelativeLayout
                            android:id="@+id/relative_area1" android:layout_width="match_parent"
                                    android:layout_height="230dp"
                                    android:background="@drawable/round_5_white"
                                    android:elevation="10dp"
                                    android:layout_marginHorizontal="18dp"
                    android:layout_marginBottom="15dp">
                        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                                   android:background="@drawable/area_1_1"
                                   android:layout_marginBottom="15dp"/>
                        <ImageView
                                android:id="@+id/iv_check1_pick_up_loc" android:layout_width="36dp" android:layout_height="36dp"
                                   android:layout_margin="7dp"
                                   android:background="@drawable/icon_check_x"
                        />
                        <TextView
                                android:id="@+id/tv_area1_1_pick_up_loc"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/tv_area1_1_pick_up_loc"
                                android:fontFamily="@font/notosanscjkkr_bold"
                                android:textColor="@color/mainColor"
                                android:textSize="17sp"
                                android:includeFontPadding="false"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="9dp"
                        />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/tv_area1_2_pick_up_loc"
                                  android:text="@string/tv_area1_2_pick_up_loc"
                                  android:layout_alignParentRight="true"
                                  android:layout_below="@+id/tv_area1_1_pick_up_loc"
                                  android:layout_marginRight="9dp"
                                  android:fontFamily="@font/notosanscjkkr_regular"
                                  android:textColor="@color/mainColor"
                                  android:textSize="17sp"
                                  android:includeFontPadding="false"
                        />
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:layout_centerHorizontal="true"
                                      android:layout_alignParentBottom="true"
                                      android:layout_marginBottom="12dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/tv_area1_3_pick_up_loc"
                                      android:fontFamily="@font/notosanscjkkr_bold"
                                      android:textColor="@color/mainColor"
                                      android:textSize="11sp"
                                      android:includeFontPadding="false"
                                      android:layout_gravity="right"
                            />
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="@string/tv_area1_4_pick_up_loc"
                                      android:fontFamily="@font/notosanscjkkr_regular"
                                      android:textColor="@color/mainColor"
                                      android:textSize="11sp"
                                      android:includeFontPadding="false"
                            />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/relative_area2"
                            android:layout_width="match_parent"
                                    android:layout_height="230dp"
                                    android:background="@drawable/round_5_white"
                                    android:elevation="10dp"
                                    android:layout_marginHorizontal="18dp"

                                    android:layout_marginBottom="15dp">
                        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                                   android:background="@drawable/area_1_2"
                                   android:layout_marginBottom="15dp"/>
                        <ImageView
                                android:id="@+id/iv_check2_pick_up_loc" android:layout_width="36dp" android:layout_height="36dp"
                                   android:layout_margin="7dp"
                                   android:background="@drawable/icon_check_x"
