<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".ui.OrderHistoryActivity">

    <TextView
            android:text="@string/tv_help_call_location_info"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="71dp" android:id="@+id/tv_help_call_location_info"
            tools:layout_editor_absoluteX="145dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/mainColor" android:fontFamily="@font/notosanscjkkr_regular"
            android:textSize="30sp" android:textColor="#FFFFFF" android:textAlignment="gravity"
            android:includeFontPadding="false"/>
    <TextView
            android:text="@string/tv_guide_location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_guide_location_info"
            android:fontFamily="@font/notosanscjkkr_bold" android:textSize="41sp" android:textColor="@color/fontGray"
            android:includeFontPadding="false" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="27dp"/>
    <TextView
            android:text="@string/tv_hard_to_find_location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_hard_to_find_location_info"
            android:textSize="17sp" android:textColor="@color/mainColor" android:includeFontPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/tv_help_call_location_info"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="12dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/tv_guide_location_info"
                  app:layout_constraintBottom_toTopOf="@+id/tv_hard_to_find_location_info">
        <TextView
                android:id="@+id/tv_date_location_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/fontGray"
                android:fontFamily="@font/notosanscjkkr_regular"
        android:text="2019년 9월 15일 일요일"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="35dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:includeFontPadding="false"
                      android:textSize="24sp"
                      android:textColor="@color/fontGray"
                      android:fontFamily="@font/notosanscjkkr_regular"
                      android:text="@string/tv_recipient_location_info"/>
            <TextView
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:textSize="24sp"
                    android:textColor="@color/fontGray"
                    android:id="@+id/tv_recipient_name_phone_location_info"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text=" 신혜란 4667"/>
        </LinearLayout>
        <RelativeLayout
                android:id="@+id/relative_loc" android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/round_5_white"
                android:elevation="10dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginBottom="50dp">
            <ImageView
                    android:id="@+id/iv_area_location_info"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                       android:background="@drawable/area_1_1"
                       android:layout_marginBottom="15dp"/>
            <TextView
                    android:id="@+id/tv_area1_location_info"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/tv_area1_1_pick_up_loc"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:textColor="@color/mainColor"
                    android:textSize="17sp"
                    android:includeFontPadding="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="9dp"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_area2_location_info"
                      android:text="@string/tv_area1_2_pick_up_loc"
                      android:layout_alignParentRight="true"
                      android:layout_below="@+id/tv_area1_location_info"
                      android:layout_marginRight="9dp"
                      android:fontFamily="@font/notosanscjkkr_regular"
                      android:textColor="@color/mainColor"
                      android:textSize="17sp"
                      android:includeFontPadding="false"
            />
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_centerHorizontal="true"
                          android:layout_alignParentBottom="true"
                          android:layout_marginBottom="12dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/tv_area1_3_pick_up_loc"
                          android:fontFamily="@font/notosanscjkkr_bold"
                          android:textColor="@color/mainColor"
                          android:textSize="11sp"
                          android:id="@+id/tv_area3_pick_up_loc"
                          android:includeFontPadding="false"
                          android:layout_gravity="right"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/tv_area1_4_pick_up_loc"
                          android:fontFamily="@font/notosanscjkkr_regular"
                          android:textColor="@color/mainColor"
                          android:id="@+id/tv_area4_pick_up_loc"
                          android:textSize="11sp"
                          android:includeFontPadding="false"
                />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>