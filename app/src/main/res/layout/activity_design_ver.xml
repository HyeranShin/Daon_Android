<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DesignActivity.DesignVerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="310dp" android:background="@color/ntower_dark"
            app:layout_constraintBottom_toBottomOf="parent" tools:layout_editor_absoluteX="0dp"
            android:id="@+id/background_design_ver" />

    <TextView
            android:text="@string/tv_ntower_select_design"
            android:layout_width="110dp"
            android:layout_height="38dp" android:id="@+id/tv_title_design_ver"
            android:background="@drawable/round_5_ntower_dark" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false" android:textSize="18sp" android:textColor="#FFFFFF"
            android:gravity="center"/>

    <ImageView
            app:layout_constraintTop_toBottomOf="@+id/tv_title_design_ver"
            android:layout_marginTop="60dp"
            android:layout_width="185dp" android:layout_height="340dp"
            android:background="@drawable/illust_n"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/imageView8"/>
    <ImageView android:layout_width="185dp" android:layout_height="340dp"
               android:background="@drawable/round_5_ntower_light"
               android:layout_marginEnd="16dp"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/imageView8"
               android:id="@+id/imageView5"/>
    <TextView
            android:text="mailmail@gmail.com"
            android:layout_width="wrap_content"
            android:layout_marginBottom="14.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/line_design_ver"
            android:layout_height="wrap_content" android:id="@+id/tv_email_design_ver"
            android:fontFamily="@font/kopubdotum_medium" android:textSize="10sp"
            android:includeFontPadding="false" android:textColor="@color/ntower_font"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"/>
    <TextView
            android:text="GIM         GA          ON"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" android:id="@+id/tv_name_en_design_hor"
            android:fontFamily="@font/kopubdotum_medium"
            android:includeFontPadding="false" android:textColor="@color/ntower_font" android:textSize="8sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_ko_design_hor"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"/>
    <TextView
            android:text="김 가 온"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_name_ko_design_hor"
            android:fontFamily="@font/kopubbatang_bold"
            android:textSize="25sp" android:textColor="@color/ntower_font" android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@+id/imageView5" app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
    <TextView
            android:text="010-XXXX-XXXX"
            android:layout_width="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content" android:id="@+id/tv_phone_design_ver"
            android:textSize="10sp" android:includeFontPadding="false"
            android:textColor="@color/ntower_font"
            app:layout_constraintStart_toStartOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintBottom_toTopOf="@+id/tv_email_design_ver"/>
    <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp" android:background="@drawable/icon_ko_purple"
            android:id="@+id/iv_ko_design_hor"
            app:layout_constraintTop_toTopOf="@+id/imageView5" app:layout_constraintStart_toStartOf="@+id/imageView5"
            android:layout_marginTop="29dp" app:layout_constraintEnd_toEndOf="@+id/imageView5"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="2dp"
            android:layout_marginBottom="30dp"
            android:background="@color/ntower_dark"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@id/imageView5"
            android:id="@+id/line_design_ver" app:layout_constraintEnd_toEndOf="@+id/imageView5"></androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:text="@string/tv_ntower_is_select_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_gung_is_select_design"
                android:fontFamily="@font/notosanscjkkr_bold" android:textSize="23sp" android:textColor="#FFFFFF"
                android:includeFontPadding="false"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_card_design_hor"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_gung_desc_select_design"/>
    <TextView
            android:text="@string/tv_ntower_desc_select_design"
            android:layout_width="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content" android:id="@+id/tv_gung_desc_select_design"
            android:fontFamily="@font/notosanscjkkr_medium" android:textSize="14sp" android:textColor="#FFFFFF"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/background_design_ver"/>
    </androidx.constraintlayout.widget.ConstraintLayout>