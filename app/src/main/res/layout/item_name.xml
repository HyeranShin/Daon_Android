<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_5_white" android:elevation="10dp" android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

    <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp" app:srcCompat="@drawable/icon_sound" android:id="@+id/ib_sound_item_name"
            android:background="@null" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:layout_marginEnd="7dp"/>
    <TextView
            android:text="김가온"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_ko_name_item_name"
            android:includeFontPadding="false" android:fontFamily="@font/notosanscjkkr_bold"
            android:textColor="@color/darkGray" android:textSize="48sp"
            android:letterSpacing="0.2"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="31dp"/>
    <TextView
            android:text="Kim-ga on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_en_name_item_name"
            android:textColor="@color/darkGray" android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkr_bold" android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/tv_ko_name_name_rcmd"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ko_name_name_rcmd" android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"/>
    <TextView
            android:text="세상의 중심이 되어라"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_meaning_item_name"
            android:textColor="@color/darkGray"
            android:includeFontPadding="false" android:textSize="26sp" android:fontFamily="@font/notosanscjkkr_light"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="29dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintGuide_percent="0.109947644"
            />
</androidx.constraintlayout.widget.ConstraintLayout>